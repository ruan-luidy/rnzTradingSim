<Application
  x:Class="rnzTradingSim.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:converters="clr-namespace:rnzTradingSim.Converters"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  StartupUri="Views/MainWindow.xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!--  HandyControl Dark Theme  -->
        <hc:Theme Skin="Dark" />
        <!--  Rugplay Theme  -->
        <ResourceDictionary Source="Resources/Styles/RugplayTheme.xaml" />
        <!--  Custom Styles  -->
        <ResourceDictionary Source="Resources/Styles/CustomStyles.xaml" />
        <ResourceDictionary Source="Resources/Styles/BoardStyles.xaml" />
        <ResourceDictionary Source="/Resources/Styles/Geometries.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <!--  Global Converters  -->
      <converters:StringToDecimalConverter x:Key="StringToDecimalConverter" />
      <converters:CurrencyConverter x:Key="CurrencyConverter" />
      <converters:AbbreviatedCurrencyConverter x:Key="AbbreviatedCurrencyConverter" />
      <converters:AbbreviatedValueConverter x:Key="AbbreviatedValueConverter" />
      <converters:PercentageConverter x:Key="PercentageConverter" />
      <converters:FullCurrencyConverter x:Key="FullCurrencyConverter" />
      <converters:HalfValueConverter x:Key="HalfValueConverter" />
      
      <!--  Basic Converters  -->
      <converters:Boolean2VisibilityConverter x:Key="Boolean2VisibilityConverter" />
      <converters:Boolean2VisibilityReConverter x:Key="Boolean2VisibilityReConverter" />
      <converters:Boolean2BooleanReConverter x:Key="Boolean2BooleanReConverter" />
      <converters:String2VisibilityConverter x:Key="String2VisibilityConverter" />
      <converters:String2BooleanConverter x:Key="String2BooleanConverter" />
    </ResourceDictionary>
  </Application.Resources>
</Application>