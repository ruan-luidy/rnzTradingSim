<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Rugplay Color Palette -->
    
    <!-- Primary Colors -->
    <Color x:Key="RugplayPrimaryColor">#fb2c36</Color>
    <Color x:Key="RugplaySecondaryColor">#ff4757</Color>
    
    <!-- Trading Colors -->
    <Color x:Key="BuyGreenColor">#16a34a</Color>
    <Color x:Key="SellRedColor">#ef4444</Color>
    <Color x:Key="NeutralBlueColor">#3b82f6</Color>
    
    <!-- Background Colors -->
    <Color x:Key="DarkBackgroundColor">#0f0f23</Color>
    <Color x:Key="CardBackgroundColor">#1a1a2e</Color>
    <Color x:Key="HoverBackgroundColor">#16213e</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#ffffff</Color>
    <Color x:Key="SecondaryTextColor">#a0a0a0</Color>
    <Color x:Key="MutedTextColor">#6b7280</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#374151</Color>
    <Color x:Key="HoverBorderColor">#fb2c36</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="RugplayPrimaryBrush" Color="{StaticResource RugplayPrimaryColor}"/>
    <SolidColorBrush x:Key="RugplaySecondaryBrush" Color="{StaticResource RugplaySecondaryColor}"/>
    
    <SolidColorBrush x:Key="BuyGreenBrush" Color="{StaticResource BuyGreenColor}"/>
    <SolidColorBrush x:Key="SellRedBrush" Color="{StaticResource SellRedColor}"/>
    <SolidColorBrush x:Key="NeutralBlueBrush" Color="{StaticResource NeutralBlueColor}"/>
    
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="{StaticResource HoverBorderColor}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="RugplayGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource RugplayPrimaryColor}" Offset="0"/>
        <GradientStop Color="{StaticResource RugplaySecondaryColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource CardBackgroundColor}" Offset="0"/>
        <GradientStop Color="{StaticResource HoverBackgroundColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Rugplay-style Button -->
    <Style x:Key="RugplayButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource RugplayGradientBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                           CornerRadius="6"
                           Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Buy Button -->
    <Style x:Key="BuyButton" TargetType="Button" BasedOn="{StaticResource RugplayButton}">
        <Setter Property="Background" Value="{StaticResource BuyGreenBrush}"/>
    </Style>
    
    <!-- Sell Button -->
    <Style x:Key="SellButton" TargetType="Button" BasedOn="{StaticResource RugplayButton}">
        <Setter Property="Background" Value="{StaticResource SellRedBrush}"/>
    </Style>
    
    <!-- Rugplay Card Style -->
    <Style x:Key="RugplayCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradientBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
                <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Rugplay Text Styles -->
    <Style x:Key="RugplayTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
    </Style>
    
    <Style x:Key="RugplaySubtitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
    </Style>
    
    <Style x:Key="RugplayBody" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
    </Style>
    
    <Style x:Key="RugplayCaption" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}"/>
    </Style>
    
    <!-- Price Text Styles -->
    <Style x:Key="PriceUpText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BuyGreenBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style x:Key="PriceDownText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SellRedBrush}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
</ResourceDictionary>