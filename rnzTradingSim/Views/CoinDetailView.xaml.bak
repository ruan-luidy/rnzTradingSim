<UserControl x:Class="rnzTradingSim.Views.CoinDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource RegionBrush}" CornerRadius="10" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="30" Width="60" Height="60" Margin="0,0,20,0">
                    <TextBlock Text="{Binding CoinSymbol}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                             FontSize="20" FontWeight="Bold" Foreground="White"/>
                </Border>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding CoinName}" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CoinSymbol}" FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentPrice, StringFormat='{0:C4}'}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding PriceChange24h, StringFormat='{0:P2}'}" FontSize="16" HorizontalAlignment="Right" 
                             Foreground="{Binding PriceChangeColor}"/>
                    <hc:Shield Status="{Binding TrendStatus}" Content="{Binding TrendText}" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <hc:Card Grid.Column="0" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Market Cap" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding MarketCap, StringFormat='{0:C0}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </hc:Card>
            
            <hc:Card Grid.Column="1" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="24h Volume" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding Volume24h, StringFormat='{0:C0}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </hc:Card>
            
            <hc:Card Grid.Column="2" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Circulating Supply" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding CirculatingSupply, StringFormat='{0:N0}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </hc:Card>
            
            <hc:Card Grid.Column="3" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="All-Time High" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding AllTimeHigh, StringFormat='{0:C4}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </hc:Card>
            
            <hc:Card Grid.Column="4" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Holders" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding HolderCount}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </hc:Card>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Chart & Trading -->
            <hc:TabControl Grid.Column="0" Margin="0,0,20,0">
                <hc:TabItem Header="Price Chart">
                    <Border Background="{DynamicResource RegionBrush}" CornerRadius="5" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Chart Controls -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <hc:Button Content="1H" Command="{Binding SetTimeframeCommand}" CommandParameter="1H" Margin="0,0,5,0"/>
                                <hc:Button Content="1D" Command="{Binding SetTimeframeCommand}" CommandParameter="1D" Margin="0,0,5,0"/>
                                <hc:Button Content="1W" Command="{Binding SetTimeframeCommand}" CommandParameter="1W" Margin="0,0,5,0"/>
                                <hc:Button Content="1M" Command="{Binding SetTimeframeCommand}" CommandParameter="1M" Margin="0,0,5,0"/>
                            </StackPanel>
                            
                            <!-- Chart Placeholder -->
                            <Border Grid.Row="1" Background="{DynamicResource CardBackground}" CornerRadius="5" 
                                   BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" MinHeight="300">
                                <TextBlock Text="ðŸ“ˆ Price Chart\n(Chart component would go here)" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center" 
                                         FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" TextAlignment="Center"/>
                            </Border>
                            
                            <!-- Quick Trade -->
                            <Grid Grid.Row="2" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <hc:Button Grid.Column="0" Content="BUY" Style="{StaticResource ButtonSuccess}" 
                                          Height="40" Command="{Binding QuickBuyCommand}"/>
                                <TextBlock Grid.Column="1" Text="{Binding CurrentPrice, StringFormat='{0:C4}'}" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0" FontWeight="Bold"/>
                                <hc:Button Grid.Column="2" Content="SELL" Style="{StaticResource ButtonDanger}" 
                                          Height="40" Command="{Binding QuickSellCommand}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </hc:TabItem>
                
                <hc:TabItem Header="Recent Trades">
                    <DataGrid ItemsSource="{Binding RecentTrades}" AutoGenerateColumns="False" CanUserAddRows="False" 
                             CanUserDeleteRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="80"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="60"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N4}" Width="100"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C4}" Width="80"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </hc:TabItem>
            </hc:TabControl>

            <!-- Sidebar -->
            <StackPanel Grid.Column="1">
                <!-- Your Position -->
                <hc:Card Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Your Position" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Amount:" FontSize="12"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UserHolding, StringFormat='{0:N4}'}" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Value:" FontSize="12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding UserHoldingValue, StringFormat='{0:C}'}" FontSize="12" HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="P&amp;L:" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding UserProfitLoss, StringFormat='{0:C}'}" FontSize="12" 
                                     HorizontalAlignment="Right" Foreground="{Binding UserProfitLossColor}"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="%:" FontSize="12"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding UserProfitLossPercent, StringFormat='{0:P2}'}" FontSize="12" 
                                     HorizontalAlignment="Right" Foreground="{Binding UserProfitLossColor}"/>
                        </Grid>
                    </StackPanel>
                </hc:Card>

                <!-- Top Holders -->
                <hc:Card Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Top Holders" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding TopHolders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Rank}" FontSize="10" Width="20"/>
                                        <TextBlock Grid.Column="1" Text="{Binding PlayerName}" FontSize="10" Margin="5,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat='{0:P1}'}" FontSize="10" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </hc:Card>

                <!-- Market News -->
                <hc:Card>
                    <StackPanel>
                        <TextBlock Text="Related Events" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding RelatedEvents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackground}" CornerRadius="3" Padding="8" Margin="0,0,0,5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontSize="11" FontWeight="Bold" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Description}" FontSize="9" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}" FontSize="8" 
                                                     Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </hc:Card>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>