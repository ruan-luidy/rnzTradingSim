<UserControl x:Class="rnzTradingSim.Views.RunSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Setup Form -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
            <StackPanel>
                <!-- Header -->
                <Border Background="LightBlue" CornerRadius="10" Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🎯 Start New Run" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Configure your trading adventure" FontSize="14" Foreground="DarkBlue"/>
                    </StackPanel>
                </Border>

                <!-- Difficulty Selection -->
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,20" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Difficulty Level" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <!-- Easy -->
                        <Border Background="LightGreen" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="Green" BorderThickness="2" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="😊" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Easy Mode" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="Perfect for beginners. Stable markets, helpful hints." FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    <TextBlock Text="• Lower volatility • Tutorial hints • Forgiving events" FontSize="10" Opacity="0.8" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="$10,000" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="1.0x rewards" FontSize="12" Foreground="Orange"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Normal -->
                        <Border Background="LightYellow" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="Orange" BorderThickness="2" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="😐" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Normal Mode" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="Balanced experience. Regular market events." FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    <TextBlock Text="• Standard volatility • Some events • Fair challenges" FontSize="10" Opacity="0.8" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="$5,000" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="1.5x rewards" FontSize="12" Foreground="Orange"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Hard -->
                        <Border Background="LightPink" CornerRadius="8" Padding="15" Margin="0,0,0,10" BorderBrush="Red" BorderThickness="2" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="😰" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Hard Mode" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="For experienced traders. Frequent crashes and events." FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                    <TextBlock Text="• High volatility • Frequent events • Real challenge" FontSize="10" Opacity="0.8" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="$1,000" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="3.0x rewards" FontSize="12" Foreground="Orange"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Starting Perks -->
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,20" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Starting Perks (Choose 2)" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <CheckBox Content="📊 Market Analyst - See price predictions" Margin="0,0,0,5"/>
                        <CheckBox Content="💰 Lucky Trader - 10% better trade outcomes" Margin="0,0,0,5"/>
                        <CheckBox Content="🛡️ Risk Manager - 25% less losses from events" Margin="0,0,0,5"/>
                        <CheckBox Content="⚡ Quick Fingers - Faster trade execution" Margin="0,0,0,5"/>
                        <CheckBox Content="🎯 Insider Info - Early event warnings" Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>

                <!-- Start Button -->
                <Button Content="🚀 START RUN" Background="Blue" Foreground="White" Height="50" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Preview Panel -->
        <Border Grid.Column="1" Background="LightGray" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Run Preview" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <!-- Selected Difficulty -->
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Difficulty" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Normal Mode" FontSize="14"/>
                        <TextBlock Text="Starting: $5,000" FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Expected Events -->
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Expected Events" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="• Market crashes" FontSize="11"/>
                        <TextBlock Text="• Rug pulls" FontSize="11"/>
                        <TextBlock Text="• Whale movements" FontSize="11"/>
                        <TextBlock Text="• Insider trading" FontSize="11"/>
                        <TextBlock Text="• Regulatory news" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Stats Prediction -->
                <Border Background="LightBlue" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Estimated Run Time" FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Text="15-30 minutes" FontSize="12"/>
                        <TextBlock Text="Success Rate: 35%" FontSize="11" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>