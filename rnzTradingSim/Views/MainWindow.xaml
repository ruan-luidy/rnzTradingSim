<Window
  x:Class="rnzTradingSim.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:rnzTradingSim"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:rnzTradingSim.Views"
  Title="RNZ Trading Simulator"
  Width="1200"
  Height="800"
  Style="{StaticResource WindowWin10}"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Header  -->
    <Border
      Grid.Row="0"
      Padding="20,15"
      Background="{DynamicResource RegionBrush}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,0,0,1">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal">
          <TextBlock
            VerticalAlignment="Center"
            Style="{StaticResource TextBlockTitleBold}"
            Text="RNZ Trading Simulator" />
          <Border
            Margin="15,0,0,0"
            Padding="8,3"
            Background="{DynamicResource DangerBrush}"
            CornerRadius="10">
            <TextBlock
              FontSize="10"
              Foreground="White"
              Style="{StaticResource TextBlockDefault}"
              Text="BETA" />
          </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <Border
            Margin="0,0,10,0"
            Padding="12,6"
            Background="{DynamicResource SuccessBrush}"
            CornerRadius="15">
            <StackPanel Orientation="Horizontal">
              <TextBlock
                Foreground="White"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="Saldo: " />
              <TextBlock
                Foreground="White"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="R$ 1.000,00" />
            </StackPanel>
          </Border>

          <Button
            Padding="15,8"
            Content="Perfil"
            Style="{StaticResource ButtonPrimary}" />
        </StackPanel>
      </Grid>
    </Border>

    <!--  Main Content  -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="250" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--  Navigation Sidebar  -->
      <Border
        Grid.Column="0"
        Background="{DynamicResource SecondaryRegionBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="0,0,1,0">
        <ScrollViewer>
          <StackPanel Margin="15">

            <!--  Navigation Menu  -->
            <TextBlock
              Margin="0,0,0,15"
              Style="{StaticResource TextBlockSubTitleBold}"
              Text="NAVEGACAO" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Inicio"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Jogos"
              Style="{StaticResource ButtonPrimary}" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Ranking"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,25"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Perfil"
              Style="{StaticResource ButtonDefault}" />

            <!--  Games Menu  -->
            <TextBlock
              Margin="0,0,0,15"
              Style="{StaticResource TextBlockSubTitleBold}"
              Text="JOGOS" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Mines"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Coinflip"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,5"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Dice"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,25"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Content="Slots"
              Style="{StaticResource ButtonDefault}" />

            <!--  Quick Stats  -->
            <TextBlock
              Margin="0,0,0,15"
              Style="{StaticResource TextBlockSubTitleBold}"
              Text="ESTATISTICAS" />

            <Border
              Margin="0,0,0,10"
              Padding="15"
              Background="{DynamicResource RegionBrush}"
              CornerRadius="8">
              <StackPanel>
                <TextBlock
                  Margin="0,0,0,5"
                  Style="{StaticResource TextBlockDefaultBold}"
                  Text="Jogos Hoje" />
                <TextBlock
                  Foreground="{DynamicResource PrimaryBrush}"
                  Style="{StaticResource TextBlockLarge}"
                  Text="23" />
              </StackPanel>
            </Border>

            <Border
              Margin="0,0,0,10"
              Padding="15"
              Background="{DynamicResource RegionBrush}"
              CornerRadius="8">
              <StackPanel>
                <TextBlock
                  Margin="0,0,0,5"
                  Style="{StaticResource TextBlockDefaultBold}"
                  Text="Lucro/Prejuizo" />
                <TextBlock
                  Foreground="{DynamicResource SuccessBrush}"
                  Style="{StaticResource TextBlockLarge}"
                  Text="+R$ 245,50" />
              </StackPanel>
            </Border>

          </StackPanel>
        </ScrollViewer>
      </Border>

      <!--  Content Area  -->
      <ContentPresenter Grid.Column="1">
        <views:GamblingView />
      </ContentPresenter>

    </Grid>
  </Grid>
</Window>