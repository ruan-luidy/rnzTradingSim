<hc:Window
  x:Class="rnzTradingSim.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:rnzTradingSim"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:rnzTradingSim.Views"
  xmlns:vm="clr-namespace:rnzTradingSim.ViewModels"
  Title="RNZ Trading Simulator"
  Width="1400"
  Height="800"
  d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
  Background="{DynamicResource RegionBrush}"
  Style="{StaticResource WindowWin10}"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!--  Left Sidebar  -->
    <Border
      Grid.Column="0"
      Background="#111111"
      BorderBrush="#222222"
      BorderThickness="0,0,1,0">
      <StackPanel>

        <!--  Logo/Brand  -->
        <Border Padding="20,20,20,25">
          <StackPanel Orientation="Horizontal">
            <Border
              Width="20"
              Height="20"
              Margin="0,0,8,0"
              Background="#ff6b35"
              CornerRadius="4" />
            <TextBlock
              FontSize="16"
              FontWeight="SemiBold"
              Text="rnzTradingSim" />
          </StackPanel>
        </Border>

        <!--  Navigation Menu  -->
        <StackPanel Margin="0,0,0,30">

          <!--  Home  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToHomeCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="HomeView">
                    <Setter Property="Background" Value="#1a1a1a" />

                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource House}" />
              <TextBlock VerticalAlignment="Center" Text="Home" />
            </StackPanel>
          </Button>

          <!--  Market  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToMarketCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="MarketView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource Store}" />
              <TextBlock VerticalAlignment="Center" Text="Market" />
            </StackPanel>
          </Button>

          <!--  Gambling  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToGamblingCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="GamblingView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource PiggyBank}" />
              <TextBlock VerticalAlignment="Center" Text="Gambling" />
            </StackPanel>
          </Button>

          <!--  Leaderboard  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToLeaderboardCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="LeaderboardView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource Trophy}" />
              <TextBlock VerticalAlignment="Center" Text="Leaderboard" />
            </StackPanel>
          </Button>

          <!--  Portfolio  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToPortfolioCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="PortfolioView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource BriefcaseBusiness}" />
              <TextBlock VerticalAlignment="Center" Text="Portfolio" />
            </StackPanel>
          </Button>

          <!--  Treemap  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToTreemapCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="TreemapView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource ChartColumn}" />
              <TextBlock VerticalAlignment="Center" Text="Treemap" />
            </StackPanel>
          </Button>

          <!--  Notifications  -->
          <Button
            Height="40"
            Margin="0,0,0,1"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToNotificationsCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="NotificationsView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource Bell}" />
              <TextBlock VerticalAlignment="Center" Text="Notifications" />
            </StackPanel>
          </Button>

          <!--  About  -->
          <Button
            Height="40"
            Margin="0,0,0,20"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            BorderThickness="0"
            Command="{Binding NavigateToAboutCommand}"
            FontSize="14">
            <Button.Style>
              <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <DataTrigger Binding="{Binding SelectedView}" Value="AboutView">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </DataTrigger>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a1a1a" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
              <Image
                Width="16"
                Height="16"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                Source="{StaticResource Info}" />
              <TextBlock VerticalAlignment="Center" Text="About" />
            </StackPanel>
          </Button>

        </StackPanel>

        <!--  Next Game Timer  -->
        <Border
          Margin="20,0,20,20"
          Padding="12"
          Background="#1a1a1a"
          BorderBrush="#333333"
          BorderThickness="1"
          CornerRadius="8">
          <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Image
              Width="14"
              Height="14"
              Margin="0,0,8,0"
              VerticalAlignment="Center"
              Source="{StaticResource Clock}" />
            <TextBlock FontSize="13" Text="Next in 3h 40m" />
          </StackPanel>
        </Border>

        <!--  Live Trades Section  -->
        <StackPanel Margin="20,0,20,20">
          <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
              <Image
                Width="14"
                Height="14"
                Margin="0,0,8,0"
                VerticalAlignment="Center"
                Source="{StaticResource Activity}" />
              <TextBlock
                FontSize="13"
                FontWeight="Medium"
                Foreground="#888888"
                Text="Live Trades" />
            </StackPanel>
            <TextBlock
              Grid.Column="1"
              FontSize="12"
              Foreground="#0080ff"
              Text="View All" />
          </Grid>

          <!--  Trade Items  -->
          <StackPanel>
            <Border Margin="0,0,0,2" Padding="0,6">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                  Grid.Column="0"
                  Width="5"
                  Height="5"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Background="#00ff88"
                  CornerRadius="3" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="#888888"
                  Text="$9.00K +$00B by @brave_c" />
              </Grid>
            </Border>

            <Border Margin="0,0,0,2" Padding="0,6">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                  Grid.Column="0"
                  Width="5"
                  Height="5"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Background="#00ff88"
                  CornerRadius="3" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="#888888"
                  Text="$9.00K +$00B by @calm_tq" />
              </Grid>
            </Border>

            <Border Margin="0,0,0,2" Padding="0,6">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                  Grid.Column="0"
                  Width="5"
                  Height="5"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Background="#00ff88"
                  CornerRadius="3" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="#888888"
                  Text="$1.80K +NYAAA by @somer" />
              </Grid>
            </Border>

            <Border Margin="0,0,0,2" Padding="0,6">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                  Grid.Column="0"
                  Width="5"
                  Height="5"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Background="#00ff88"
                  CornerRadius="3" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="#888888"
                  Text="$1.30K +VXNET by @clever." />
              </Grid>
            </Border>

            <Border Margin="0,0,0,2" Padding="0,6">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                  Grid.Column="0"
                  Width="5"
                  Height="5"
                  Margin="0,0,10,0"
                  VerticalAlignment="Center"
                  Background="#00ff88"
                  CornerRadius="3" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="#888888"
                  Text="$9.00K +$00B by @calm_ex" />
              </Grid>
            </Border>
          </StackPanel>
        </StackPanel>

        <!--  Portfolio Section  -->
        <StackPanel Margin="20,0,20,0">
          <TextBlock
            Margin="0,0,0,15"
            FontSize="13"
            FontWeight="Medium"
            Foreground="#888888"
            Text="Portfolio" />

          <Border
            Padding="15"
            Background="#1a1a1a"
            CornerRadius="8">
            <StackPanel>
              <!--  Total Value Header  -->
              <StackPanel Margin="0,0,0,12" Orientation="Horizontal">
                <Image
                  Width="14"
                  Height="14"
                  Margin="0,0,8,0"
                  VerticalAlignment="Center"
                  Source="{StaticResource Wallet}" />
                <TextBlock
                  VerticalAlignment="Center"
                  FontSize="13"
                  Foreground="#888888"
                  Text="Total Value" />
                <TextBlock
                  Margin="50,0,0,0"
                  FontSize="13"
                  FontWeight="Medium"
                  Foreground="White"
                  Text="$2.05" />
              </StackPanel>

              <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  FontSize="12"
                  Foreground="#888888"
                  Text="Cash:" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="White"
                  Text="$0.00" />
              </Grid>

              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  FontSize="12"
                  Foreground="#888888"
                  Text="Coins:" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Foreground="White"
                  Text="$2.05" />
              </Grid>
            </StackPanel>
          </Border>
        </StackPanel>

        <!--  Bottom User Profile  -->
        <Border Margin="20,20,20,20">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Avatar  -->
            <Border
              Grid.Column="0"
              Width="32"
              Height="32"
              Margin="0,0,10,0"
              Background="#0080ff"
              CornerRadius="16">
              <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                Text="R" />
            </Border>

            <!--  User Info  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
              <TextBlock
                FontSize="13"
                FontWeight="Medium"
                Foreground="White"
                Text="ruãbrabo" />
              <TextBlock
                FontSize="11"
                Foreground="#888888"
                Text="@shiblabi" />
            </StackPanel>

            <!--  Menu Icon  -->
            <Button
              Grid.Column="2"
              Background="Transparent"
              BorderThickness="0"
              Command="{Binding NavigateToProfileCommand}">
              <TextBlock
                VerticalAlignment="Center"
                FontFamily="Segoe MDL2 Assets"
                FontSize="14"
                Foreground="#888888"
                Text="&#xE712;" />
            </Button>
          </Grid>
        </Border>

      </StackPanel>
    </Border>

    <!--  Main Content Area with ContentControl for Views  -->
    <Grid Grid.Column="1" Background="#0f0f0f">
      <ContentControl>
        <ContentControl.Style>
          <Style TargetType="ContentControl">
            <Style.Triggers>
              <DataTrigger Binding="{Binding SelectedView}" Value="HomeView">
                <Setter Property="Content">
                  <Setter.Value>
                    <views:HomeView />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
              <DataTrigger Binding="{Binding SelectedView}" Value="MarketView">
                <Setter Property="Content">
                  <Setter.Value>
                    <views:MarketView />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
              <DataTrigger Binding="{Binding SelectedView}" Value="GamblingView">
                <Setter Property="Content">
                  <Setter.Value>
                    <views:GamblingView />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
              <DataTrigger Binding="{Binding SelectedView}" Value="LeaderboardView">
                <Setter Property="Content">
                  <Setter.Value>
                    <views:LeaderboardView />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
              <DataTrigger Binding="{Binding SelectedView}" Value="ProfileView">
                <Setter Property="Content">
                  <Setter.Value>
                    <views:ProfileView />
                  </Setter.Value>
                </Setter>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </ContentControl.Style>
      </ContentControl>
    </Grid>

  </Grid>
</hc:Window>