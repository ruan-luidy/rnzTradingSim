<hc:Window
  x:Class="rnzTradingSim.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:rnzTradingSim"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="clr-namespace:rnzTradingSim.Views"
  Title="RNZ Trading Simulator"
  Width="1400"
  Height="800"
  Background="{DynamicResource RegionBrush}"
  Style="{StaticResource WindowWin10}"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!--  Left Sidebar  -->
    <Border
      Grid.Column="0"
      Background="#1a1a1a"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="0,0,1,0">
      <ScrollViewer>
        <StackPanel>

          <!--  Logo/Brand  -->
          <Border Padding="20,25,20,20">
            <StackPanel Orientation="Horizontal">
              <Border
                Width="8"
                Height="8"
                Margin="0,0,8,0"
                Background="{DynamicResource PrimaryBrush}"
                CornerRadius="4" />
              <TextBlock
                Foreground="White"
                Style="{StaticResource TextBlockTitleBold}"
                Text="Rugplay" />
            </StackPanel>
          </Border>

          <!--  Navigation Menu  -->
          <StackPanel Margin="15,0">

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Home"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Market"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Hopium"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="#2a2a2a"
              BorderThickness="0"
              Content="Gambling"
              Foreground="White"
              Style="{StaticResource ButtonPrimary}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Leaderboard"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Portfolio"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Treemap"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Create coin"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,3"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="Notifications"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

            <Button
              Margin="0,0,0,25"
              Padding="15,12"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Left"
              Background="Transparent"
              BorderThickness="0"
              Content="About"
              Foreground="#8b8b8b"
              Style="{StaticResource ButtonDefault}" />

          </StackPanel>

          <!--  Live Trades Section  -->
          <StackPanel Margin="15,0">
            <Grid Margin="0,0,0,15">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBlock
                Grid.Column="0"
                Foreground="#8b8b8b"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="Live Trades" />
              <TextBlock
                Grid.Column="1"
                Foreground="{DynamicResource PrimaryBrush}"
                Style="{StaticResource TextBlockDefault}"
                Text="View All" />
            </Grid>

            <!--  Trade Items  -->
            <StackPanel>
              <Border Margin="0,0,0,3" Padding="0,8">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <Border
                    Grid.Column="0"
                    Width="6"
                    Height="6"
                    Margin="0,0,8,0"
                    Background="{DynamicResource SuccessBrush}"
                    CornerRadius="3" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="$1.22K +036k by @right_c" />
                </Grid>
              </Border>

              <Border Margin="0,0,0,3" Padding="0,8">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Border
                    Grid.Column="0"
                    Width="6"
                    Height="6"
                    Margin="0,0,8,0"
                    Background="{DynamicResource DangerBrush}"
                    CornerRadius="3" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="$12.53K -WILLBEHERE by (" />
                </Grid>
              </Border>

              <Border Margin="0,0,0,3" Padding="0,8">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Border
                    Grid.Column="0"
                    Width="6"
                    Height="6"
                    Margin="0,0,8,0"
                    Background="{DynamicResource SuccessBrush}"
                    CornerRadius="3" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="$1.06K +FRKO by @eight" />
                </Grid>
              </Border>
            </StackPanel>
          </StackPanel>

          <!--  Portfolio Section  -->
          <StackPanel Margin="15,30,15,0">
            <TextBlock
              Margin="0,0,0,15"
              Foreground="#8b8b8b"
              Style="{StaticResource TextBlockDefaultBold}"
              Text="Portfolio" />

            <Border
              Padding="15"
              Background="#2a2a2a"
              CornerRadius="8">
              <StackPanel>
                <Grid Margin="0,0,0,10">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="Total Value" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="White"
                    Style="{StaticResource TextBlockDefaultBold}"
                    Text="$1,800.00" />
                </Grid>

                <Grid Margin="0,0,0,5">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="Cash:" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="White"
                    Style="{StaticResource TextBlockDefault}"
                    Text="$1,800.00" />
                </Grid>

                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Foreground="#8b8b8b"
                    Style="{StaticResource TextBlockDefault}"
                    Text="Coins:" />
                  <TextBlock
                    Grid.Column="1"
                    Foreground="White"
                    Style="{StaticResource TextBlockDefault}"
                    Text="$0.00" />
                </Grid>
              </StackPanel>
            </Border>
          </StackPanel>

        </StackPanel>
      </ScrollViewer>
    </Border>

    <!--  Main Content Area  -->
    <Grid Grid.Column="1" Background="#0f0f0f">
      <views:GamblingView />
    </Grid>

  </Grid>
</hc:Window>