<UserControl x:Class="rnzTradingSim.Views.SimpleRunSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <!-- Run Setup Interface -->
        <Border Background="LightBlue" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="🎯 Start New Trading Run" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                
                <!-- Difficulty Selection -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Choose Difficulty:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <RadioButton Content="😊 Easy Mode - $10,000 starting, stable markets" FontSize="14" Margin="0,0,0,5" IsChecked="True"/>
                    <RadioButton Content="😐 Normal Mode - $5,000 starting, regular events" FontSize="14" Margin="0,0,0,5"/>
                    <RadioButton Content="😰 Hard Mode - $1,000 starting, volatile markets" FontSize="14" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Starting Perks -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Starting Perks (Choose 2):" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <CheckBox Content="📊 Market Analyst - See price predictions" FontSize="12" Margin="0,0,0,3"/>
                    <CheckBox Content="💰 Lucky Trader - 10% better outcomes" FontSize="12" Margin="0,0,0,3"/>
                    <CheckBox Content="🛡️ Risk Manager - 25% less event damage" FontSize="12" Margin="0,0,0,3"/>
                    <CheckBox Content="⚡ Quick Fingers - Faster execution" FontSize="12" Margin="0,0,0,3"/>
                    <CheckBox Content="🎯 Insider Info - Early warnings" FontSize="12" Margin="0,0,0,3"/>
                </StackPanel>

                <!-- Objectives -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Run Objectives:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="🎯 Reach $50,000 portfolio value" FontSize="12" Margin="0,0,0,3"/>
                        <TextBlock Text="💎 Survive 3 market crashes" FontSize="12" Margin="0,0,0,3"/>
                        <TextBlock Text="🚀 Create a successful coin" FontSize="12" Margin="0,0,0,3"/>
                        <TextBlock Text="⏰ Last for 30 minutes" FontSize="12" Margin="0,0,0,3"/>
                    </StackPanel>
                </Border>

                <!-- Start Button -->
                <Button Content="🚀 START TRADING RUN" Background="Green" Foreground="White" FontSize="18" FontWeight="Bold" 
                       Height="50" HorizontalAlignment="Center" MinWidth="200"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>