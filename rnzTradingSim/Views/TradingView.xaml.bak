<UserControl x:Class="rnzTradingSim.Views.TradingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Trading Interface -->
        <Border Grid.Column="0" Background="LightGray" CornerRadius="10" Margin="0,0,20,0" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Pair Selection -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Width="150" Margin="0,0,20,0"/>
                        <TextBlock Text="{Binding SelectedPair.CurrentPrice}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedPair.PriceChange}" FontSize="16" 
                                 VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{Binding SelectedPair.ChangeColor}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Balance:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding PlayerBalance, StringFormat='{0:C}'}" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Chart Area -->
                <Border Grid.Row="1" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Padding="10">
                    <TextBlock Text="ðŸ“Š Advanced Trading Chart" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray"/>
                </Border>

                <!-- Order Book -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Buy Orders -->
                    <Border Grid.Column="0" Background="White" CornerRadius="5" Margin="0,0,10,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Buy Orders" FontWeight="Bold" Foreground="Green" Margin="0,0,0,5"/>
                            <DataGrid ItemsSource="{Binding BuyOrders}" AutoGenerateColumns="False" HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{0:C4}'}" Width="*"/>
                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='{0:N2}'}" Width="*"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='{0:C}'}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Sell Orders -->
                    <Border Grid.Column="1" Background="White" CornerRadius="5" Margin="10,0,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Sell Orders" FontWeight="Bold" Foreground="Red" Margin="0,0,0,5"/>
                            <DataGrid ItemsSource="{Binding SellOrders}" AutoGenerateColumns="False" HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{0:C4}'}" Width="*"/>
                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='{0:N2}'}" Width="*"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat='{0:C}'}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Trading Panel -->
        <StackPanel Grid.Column="1">
            <!-- Order Types -->
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,20" Padding="15">
                <StackPanel>
                    <TextBlock Text="Order Type" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ComboBox SelectedItem="{Binding OrderType}">
                        <ComboBoxItem Content="Market Order"/>
                        <ComboBoxItem Content="Limit Order"/>
                        <ComboBoxItem Content="Stop Loss"/>
                        <ComboBoxItem Content="Take Profit"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Buy Section -->
            <Border Background="LightGreen" CornerRadius="5" Margin="0,0,0,10" Padding="15" Opacity="0.8">
                <StackPanel>
                    <TextBlock Text="Buy" FontWeight="Bold" Foreground="DarkGreen" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Price" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding BuyPrice}"/>
                    
                    <TextBlock Text="Amount" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding BuyAmount}"/>
                    
                    <TextBlock Text="Total" Margin="0,10,0,5"/>
                    <TextBlock Text="{Binding BuyTotal, StringFormat='{0:C}'}" FontWeight="Bold"/>
                    
                    <Button Content="BUY" Background="Green" Foreground="White" Margin="0,10,0,0" Command="{Binding PlaceBuyOrderCommand}"/>
                </StackPanel>
            </Border>

            <!-- Sell Section -->
            <Border Background="LightCoral" CornerRadius="5" Margin="0,10,0,20" Padding="15" Opacity="0.8">
                <StackPanel>
                    <TextBlock Text="Sell" FontWeight="Bold" Foreground="DarkRed" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Price" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SellPrice}"/>
                    
                    <TextBlock Text="Amount" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding SellAmount}"/>
                    
                    <TextBlock Text="Total" Margin="0,10,0,5"/>
                    <TextBlock Text="{Binding SellTotal, StringFormat='{0:C}'}" FontWeight="Bold"/>
                    
                    <Button Content="SELL" Background="Red" Foreground="White" Margin="0,10,0,0" Command="{Binding PlaceSellOrderCommand}"/>
                </StackPanel>
            </Border>

            <!-- Open Orders -->
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Your Open Orders" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding OpenOrders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightGray" CornerRadius="3" Padding="8" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Type}" FontSize="11" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Amount}" FontSize="10"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1" Content="âœ–" Width="20" Height="20" Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>