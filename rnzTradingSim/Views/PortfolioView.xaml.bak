<UserControl x:Class="rnzTradingSim.Views.PortfolioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightGray" CornerRadius="10" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Portfolio" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding TotalValue, StringFormat='Total Value: {0:C}'}" FontSize="16" Foreground="Green"/>
                    <TextBlock Text="{Binding ProfitLoss, StringFormat='P&amp;L: {0:C}'}" FontSize="14" Foreground="{Binding ProfitLossColor}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding ProfitLossPercentage}" FontSize="20" FontWeight="Bold" Foreground="{Binding ProfitLossColor}"/>
                    <TextBlock Text="{Binding PortfolioStatusText}" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Portfolio Stats -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Holdings" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding HoldingsCount}" FontSize="20" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="1" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5,0,5,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="24h Change" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding DayChange, StringFormat='{0:P2}'}" FontSize="20" HorizontalAlignment="Center" Foreground="{Binding DayChangeColor}"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="2" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5,0,5,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Best Performer" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding BestPerformer}" FontSize="16" HorizontalAlignment="Center" Foreground="Green"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Column="3" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="10,0,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Worst Performer" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding WorstPerformer}" FontSize="16" HorizontalAlignment="Center" Foreground="Red"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Holdings List -->
        <TabControl Grid.Row="2">
            <TabItem Header="Holdings">
                <DataGrid ItemsSource="{Binding Holdings}" AutoGenerateColumns="False" CanUserAddRows="False" 
                         CanUserDeleteRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Asset" Binding="{Binding Symbol}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N4}" Width="120"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Value" Binding="{Binding TotalValue, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="P&amp;L" Binding="{Binding ProfitLoss, StringFormat=C}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{Binding ProfitLossColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="%" Binding="{Binding ProfitLossPercentage, StringFormat=P2}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{Binding ProfitLossColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Buy" Background="Green" Foreground="White" Margin="0,0,5,0" 
                                                  Command="{Binding DataContext.BuyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                        <Button Content="Sell" Background="Red" Foreground="White"
                                                  Command="{Binding DataContext.SellCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <TabItem Header="Transaction History">
                <DataGrid ItemsSource="{Binding TransactionHistory}" AutoGenerateColumns="False" CanUserAddRows="False" 
                         CanUserDeleteRows="False" IsReadOnly="True" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=MM/dd/yyyy HH:mm}" Width="130"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                        <DataGridTextColumn Header="Asset" Binding="{Binding Symbol}" Width="80"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=N4}" Width="120"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>