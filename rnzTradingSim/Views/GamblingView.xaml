<UserControl
  x:Class="rnzTradingSim.Views.GamblingView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:games="clr-namespace:rnzTradingSim.Views.Games"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:rnzTradingSim.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="550"
  d:DesignWidth="950"
  mc:Ignorable="d">

  <Grid Margin="30">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  Header  -->
    <StackPanel Grid.Row="0" Margin="0,0,0,30">
      <TextBlock
        Margin="0,0,0,10"
        Style="{StaticResource TextBlockLargeBold}"
        Text="JOGOS DISPONIVEIS" />
      <TextBlock
        Foreground="{DynamicResource ThirdlyTextBrush}"
        Style="{StaticResource TextBlockDefault}"
        Text="Escolha um jogo para comecar a apostar" />
    </StackPanel>

    <!--  Game Selection Grid  -->
    <Grid Grid.Row="1" Margin="0,0,0,30">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <!--  Mines Game Card  -->
      <Border
        Grid.Column="0"
        Margin="0,0,15,0"
        Padding="20"
        Background="{DynamicResource RegionBrush}"
        BorderBrush="{DynamicResource PrimaryBrush}"
        BorderThickness="2"
        CornerRadius="12">
        <StackPanel HorizontalAlignment="Center">
          <Border
            Width="60"
            Height="60"
            Margin="0,0,0,15"
            Background="{DynamicResource DangerBrush}"
            CornerRadius="30">
            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Foreground="White"
              Style="{StaticResource TextBlockLargeBold}"
              Text="M" />
          </Border>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="MINES" />
          <TextBlock
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Foreground="{DynamicResource ThirdlyTextBrush}"
            Style="{StaticResource TextBlockDefault}"
            Text="Campo minado" />
          <Button
            Padding="0,8"
            HorizontalAlignment="Stretch"
            Content="JOGAR"
            Style="{StaticResource ButtonPrimary}" />
        </StackPanel>
      </Border>

      <!--  Coinflip Game Card  -->
      <Border
        Grid.Column="1"
        Margin="0,0,15,0"
        Padding="20"
        Background="{DynamicResource RegionBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <StackPanel HorizontalAlignment="Center">
          <Border
            Width="60"
            Height="60"
            Margin="0,0,0,15"
            Background="{DynamicResource WarningBrush}"
            CornerRadius="30">
            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Foreground="White"
              Style="{StaticResource TextBlockLargeBold}"
              Text="C" />
          </Border>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="COINFLIP" />
          <TextBlock
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Foreground="{DynamicResource ThirdlyTextBrush}"
            Style="{StaticResource TextBlockDefault}"
            Text="Cara ou coroa" />
          <Button
            Padding="0,8"
            HorizontalAlignment="Stretch"
            Content="JOGAR"
            Style="{StaticResource ButtonDefault}" />
        </StackPanel>
      </Border>

      <!--  Dice Game Card  -->
      <Border
        Grid.Column="2"
        Margin="0,0,15,0"
        Padding="20"
        Background="{DynamicResource RegionBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <StackPanel HorizontalAlignment="Center">
          <Border
            Width="60"
            Height="60"
            Margin="0,0,0,15"
            Background="{DynamicResource InfoBrush}"
            CornerRadius="30">
            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Foreground="White"
              Style="{StaticResource TextBlockLargeBold}"
              Text="D" />
          </Border>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="DICE" />
          <TextBlock
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Foreground="{DynamicResource ThirdlyTextBrush}"
            Style="{StaticResource TextBlockDefault}"
            Text="Jogo de dados" />
          <Button
            Padding="0,8"
            HorizontalAlignment="Stretch"
            Content="JOGAR"
            Style="{StaticResource ButtonDefault}" />
        </StackPanel>
      </Border>

      <!--  Slots Game Card  -->
      <Border
        Grid.Column="3"
        Padding="20"
        Background="{DynamicResource RegionBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <StackPanel HorizontalAlignment="Center">
          <Border
            Width="60"
            Height="60"
            Margin="0,0,0,15"
            Background="{DynamicResource AccentBrush}"
            CornerRadius="30">
            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Foreground="White"
              Style="{StaticResource TextBlockLargeBold}"
              Text="S" />
          </Border>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="SLOTS" />
          <TextBlock
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Foreground="{DynamicResource ThirdlyTextBrush}"
            Style="{StaticResource TextBlockDefault}"
            Text="Caca-niqueis" />
          <Button
            Padding="0,8"
            HorizontalAlignment="Stretch"
            Content="JOGAR"
            Style="{StaticResource ButtonDefault}" />
        </StackPanel>
      </Border>
    </Grid>

    <!--  Current Game Content  -->
    <Border
      Grid.Row="2"
      Background="{DynamicResource SecondaryRegionBrush}"
      BorderBrush="{DynamicResource BorderBrush}"
      BorderThickness="1"
      CornerRadius="12">
      <ContentPresenter>
        <!--  Current game will be displayed here  -->
        <games:MinesView />
      </ContentPresenter>
    </Border>

  </Grid>
</UserControl>