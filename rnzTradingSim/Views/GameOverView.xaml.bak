<UserControl x:Class="rnzTradingSim.Views.GameOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="Black" Opacity="0.95">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Game Over Content -->
        <Border Grid.Row="1" Background="LightGray" CornerRadius="20" Padding="40" MaxWidth="800" HorizontalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding GameOverTitle}" FontSize="36" FontWeight="Bold" Foreground="{Binding TitleColor}" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding GameOverSubtitle}" FontSize="18" Foreground="DarkGray"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" Text="{Binding GameOverIcon}" FontSize="64" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Run Statistics -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Stats -->
                        <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Run Statistics" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Duration:" FontSize="14"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunDuration}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Starting Balance:" FontSize="14"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartingBalance}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Final Balance:" FontSize="14"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FinalBalance, StringFormat='{0:C}'}" FontSize="14" HorizontalAlignment="Right" Foreground="{Binding BalanceColor}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Net P&amp;L:" FontSize="14"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding NetProfitLoss, StringFormat='{0:C}'}" FontSize="14" HorizontalAlignment="Right" Foreground="{Binding ProfitLossColor}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Best Trade:" FontSize="14"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding BestTrade, StringFormat='{0:C}'}" FontSize="14" HorizontalAlignment="Right" Foreground="Green"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Worst Trade:" FontSize="14"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding WorstTrade, StringFormat='{0:C}'}" FontSize="14" HorizontalAlignment="Right" Foreground="Red"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Right Stats -->
                        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Achievement Progress" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Trades Made:" FontSize="14"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TradesMade}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Coins Created:" FontSize="14"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CoinsCreated}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Events Survived:" FontSize="14"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EventsSurvived}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Items Used:" FontSize="14"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ItemsUsed}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Max Portfolio:" FontSize="14"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MaxPortfolioValue, StringFormat='{0:C}'}" FontSize="14" HorizontalAlignment="Right"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Difficulty:" FontSize="14"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DifficultyLevel}" FontSize="14" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Unlocks & Rewards -->
                    <Border Background="LightBlue" CornerRadius="10" Padding="20" Margin="0,0,0,30">
                        <StackPanel>
                            <TextBlock Text="🎁 Unlocks &amp; Rewards" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="DarkBlue"/>
                            
                            <ItemsControl ItemsSource="{Binding UnlockedRewards}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding RarityColor}" CornerRadius="5" Padding="10" Margin="0,0,0,8" Opacity="0.9">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="20" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2" Text="NEW!" FontSize="10" FontWeight="Bold" Foreground="Orange" VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="{Binding XpGained, StringFormat='Experience Gained: +{0} XP'}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,0" Foreground="Blue"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="📊 View Details" Command="{Binding ViewDetailsCommand}" Background="Blue" Foreground="White" Height="45" Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="🔄 Try Again" Command="{Binding RestartRunCommand}" Background="Green" Foreground="White" Height="45" Margin="5,0"/>
                        <Button Grid.Column="2" Content="🏠 Main Menu" Command="{Binding MainMenuCommand}" Background="Gray" Foreground="White" Height="45" Margin="10,0,0,0"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>