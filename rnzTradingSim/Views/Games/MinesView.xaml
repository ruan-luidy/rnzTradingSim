<UserControl
  x:Class="rnzTradingSim.Views.Games.MinesView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:hc="https://handyorg.github.io/handycontrol"
  xmlns:local="clr-namespace:rnzTradingSim.Views.Games"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="400"
  d:DesignWidth="890"
  mc:Ignorable="d">

  <Grid Margin="30">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="250" />
    </Grid.ColumnDefinitions>

    <!--  Left Panel - Game Controls  -->
    <StackPanel Grid.Column="0" Margin="0,0,20,0">

      <!--  Game Title  -->
      <TextBlock
        Margin="0,0,0,20"
        Style="{StaticResource TextBlockTitleBold}"
        Text="MINES" />

      <!--  Bet Amount  -->
      <TextBlock
        Margin="0,0,0,8"
        Style="{StaticResource TextBlockDefaultBold}"
        Text="VALOR DA APOSTA" />
      <hc:NumericUpDown
        Margin="0,0,0,20"
        DecimalPlaces="2"
        Maximum="1000"
        Minimum="1"
        Value="10.00" />

      <!--  Number of Mines  -->
      <TextBlock
        Margin="0,0,0,8"
        Style="{StaticResource TextBlockDefaultBold}"
        Text="NUMERO DE MINAS" />
      <Slider
        Margin="0,0,0,5"
        IsSnapToTickEnabled="True"
        Maximum="24"
        Minimum="1"
        TickFrequency="1"
        Value="3" />
      <TextBlock
        Margin="0,0,0,20"
        HorizontalAlignment="Center"
        Style="{StaticResource TextBlockDefault}"
        Text="3 minas" />

      <!--  Multiplier Display  -->
      <Border
        Margin="0,0,0,20"
        Padding="15"
        Background="{DynamicResource RegionBrush}"
        CornerRadius="8">
        <StackPanel>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="MULTIPLICADOR ATUAL" />
          <TextBlock
            HorizontalAlignment="Center"
            Foreground="{DynamicResource SuccessBrush}"
            Style="{StaticResource TextBlockLargeBold}"
            Text="1.00x" />
        </StackPanel>
      </Border>

      <!--  Potential Win  -->
      <Border
        Margin="0,0,0,20"
        Padding="15"
        Background="{DynamicResource SuccessBrush}"
        CornerRadius="8">
        <StackPanel>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Foreground="White"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="GANHO POTENCIAL" />
          <TextBlock
            HorizontalAlignment="Center"
            Foreground="White"
            Style="{StaticResource TextBlockLargeBold}"
            Text="R$ 10,00" />
        </StackPanel>
      </Border>

      <!--  Action Buttons  -->
      <Button
        Margin="0,0,0,10"
        Padding="0,12"
        HorizontalAlignment="Stretch"
        Content="COMECAR JOGO"
        Style="{StaticResource ButtonSuccess}" />

      <Button
        Padding="0,12"
        HorizontalAlignment="Stretch"
        Content="COLETAR GANHOS"
        IsEnabled="False"
        Style="{StaticResource ButtonWarning}" />

    </StackPanel>

    <!--  Center Panel - Game Grid  -->
    <Border
      Grid.Column="1"
      Margin="0,0,20,0"
      Padding="20"
      Background="{DynamicResource RegionBrush}"
      CornerRadius="12">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Grid Header  -->
        <TextBlock
          Grid.Row="0"
          Margin="0,0,0,20"
          HorizontalAlignment="Center"
          Style="{StaticResource TextBlockSubTitleBold}"
          Text="CAMPO DE JOGO" />

        <!--  Mine Grid  -->
        <Grid Name="MineGrid" Grid.Row="1">
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <!--  Mine Buttons (5x5 grid)  -->
          <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="0"
            Grid.Column="4"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />

          <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="1"
            Grid.Column="3"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="1"
            Grid.Column="4"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />

          <Button
            Grid.Row="2"
            Grid.Column="0"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="2"
            Grid.Column="1"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="2"
            Grid.Column="2"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="2"
            Grid.Column="3"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="2"
            Grid.Column="4"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />

          <Button
            Grid.Row="3"
            Grid.Column="0"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="3"
            Grid.Column="1"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="3"
            Grid.Column="2"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="3"
            Grid.Column="3"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="3"
            Grid.Column="4"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />

          <Button
            Grid.Row="4"
            Grid.Column="0"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="4"
            Grid.Column="1"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="4"
            Grid.Column="2"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="4"
            Grid.Column="3"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
          <Button
            Grid.Row="4"
            Grid.Column="4"
            Margin="2"
            Style="{StaticResource ButtonDefault}" />
        </Grid>
      </Grid>
    </Border>

    <!--  Right Panel - Game Info  -->
    <StackPanel Grid.Column="2">

      <!--  Game Status  -->
      <TextBlock
        Margin="0,0,0,15"
        Style="{StaticResource TextBlockSubTitleBold}"
        Text="STATUS DO JOGO" />

      <Border
        Margin="0,0,0,15"
        Padding="15"
        Background="{DynamicResource InfoBrush}"
        CornerRadius="8">
        <StackPanel>
          <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Center"
            Foreground="White"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="AGUARDANDO" />
          <TextBlock
            HorizontalAlignment="Center"
            Foreground="White"
            Style="{StaticResource TextBlockDefault}"
            Text="Configure sua aposta" />
        </StackPanel>
      </Border>

      <!--  Game Statistics  -->
      <TextBlock
        Margin="0,0,0,15"
        Style="{StaticResource TextBlockSubTitleBold}"
        Text="ESTATISTICAS" />

      <Border
        Margin="0,0,0,10"
        Padding="15"
        Background="{DynamicResource RegionBrush}"
        CornerRadius="8">
        <StackPanel>
          <TextBlock
            Margin="0,0,0,5"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="Revelados" />
          <TextBlock
            Foreground="{DynamicResource PrimaryBrush}"
            Style="{StaticResource TextBlockLarge}"
            Text="0 / 25" />
        </StackPanel>
      </Border>

      <Border
        Margin="0,0,0,10"
        Padding="15"
        Background="{DynamicResource RegionBrush}"
        CornerRadius="8">
        <StackPanel>
          <TextBlock
            Margin="0,0,0,5"
            Style="{StaticResource TextBlockDefaultBold}"
            Text="Minas Restantes" />
          <TextBlock
            Foreground="{DynamicResource DangerBrush}"
            Style="{StaticResource TextBlockLarge}"
            Text="3" />
        </StackPanel>
      </Border>

      <!--  Recent Games  -->
      <TextBlock
        Margin="0,15,0,15"
        Style="{StaticResource TextBlockSubTitleBold}"
        Text="JOGOS RECENTES" />

      <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
        <StackPanel>
          <Border
            Margin="0,0,0,5"
            Padding="12,8"
            Background="{DynamicResource SuccessBrush}"
            CornerRadius="6">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBlock
                Grid.Column="0"
                Foreground="White"
                Style="{StaticResource TextBlockDefault}"
                Text="3 Minas" />
              <TextBlock
                Grid.Column="1"
                Foreground="White"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="+R$ 45,30" />
            </Grid>
          </Border>

          <Border
            Margin="0,0,0,5"
            Padding="12,8"
            Background="{DynamicResource DangerBrush}"
            CornerRadius="6">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBlock
                Grid.Column="0"
                Foreground="White"
                Style="{StaticResource TextBlockDefault}"
                Text="5 Minas" />
              <TextBlock
                Grid.Column="1"
                Foreground="White"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="-R$ 20,00" />
            </Grid>
          </Border>

          <Border
            Margin="0,0,0,5"
            Padding="12,8"
            Background="{DynamicResource SuccessBrush}"
            CornerRadius="6">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <TextBlock
                Grid.Column="0"
                Foreground="White"
                Style="{StaticResource TextBlockDefault}"
                Text="2 Minas" />
              <TextBlock
                Grid.Column="1"
                Foreground="White"
                Style="{StaticResource TextBlockDefaultBold}"
                Text="+R$ 15,75" />
            </Grid>
          </Border>
        </StackPanel>
      </ScrollViewer>

    </StackPanel>

  </Grid>
</UserControl>