<?xml version="1.0" encoding="utf-8" ?>
<Window
  x:Class="rnzGamblersTable.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:ic="using:FluentIcons.WinUI"
  xmlns:local="using:rnzGamblersTable"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="rnzGamblersTable"
  mc:Ignorable="d">
  <Window.SystemBackdrop>
    <MicaBackdrop />
  </Window.SystemBackdrop>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!--  Left Sidebar  -->
    <Border
      Grid.Column="0"
      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
      BorderBrush="{ThemeResource CircleElevationBorderBrush}"
      BorderThickness="0,0,1,0"
      CornerRadius="0"
      Translation="0,0,30">
      <Border.Shadow>
        <ThemeShadow />
      </Border.Shadow>
      <StackPanel>
        <Border Padding="20,20,20,25">
          <StackPanel Orientation="Horizontal">
            <Border
              Width="20"
              Height="20"
              Margin="0,0,8,0"
              Background="Red"
              CornerRadius="4" />
            <TextBlock
              FontSize="16"
              FontWeight="SemiBold"
              Text="rnzGamblersTable" />
          </StackPanel>
        </Border>

        <StackPanel Margin="0,0,0,30">

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <ic:FluentIcon
                Icon="Home"
                IconSize="Size16"
                IconVariant="Filled" />
              <TextBlock VerticalAlignment="Center" Text="Home" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <ic:FluentIcon Icon="PlayingCards" IconVariant="Filled" />
              <TextBlock VerticalAlignment="Center" Text="Poker" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <ic:FluentIcon
                Icon="Trophy"
                IconSize="Size16"
                IconVariant="Filled" />
              <TextBlock VerticalAlignment="Center" Text="Leaderboard" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,15"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <ic:FluentIcon
                Icon="Briefcase"
                IconSize="Size16"
                IconVariant="Filled" />
              <TextBlock VerticalAlignment="Center" Text="Portfolio" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>
        </StackPanel>

        <StackPanel Margin="15,0,15,0">
          <TextBlock
            Margin="0,0,0,10"
            FontSize="13"
            FontWeight="Medium"
            Text="Portfolio" />

          <Border
            Padding="15"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CircleElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource OverlayCornerRadius}"
            Translation="0,0,30">
            <StackPanel>
              <StackPanel
                Margin="0,0,0,12"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <ic:FluentIcon
                  Icon="Wallet"
                  IconSize="Size16"
                  IconVariant="Filled" />
                <TextBlock
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Total Value" />
              </StackPanel>

              <Border
                Margin="0,0,0,12"
                Padding="2"
                CornerRadius="8">
                <TextBlock
                  HorizontalAlignment="Center"
                  FontSize="16"
                  FontWeight="Medium"
                  Text="$5,000.00" />
              </Border>

              <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  FontSize="12"
                  Text="Cash:" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Text="$2,500.00" />
              </Grid>
            </StackPanel>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
          </Border>
        </StackPanel>

        <!--  Bottom User Profile  -->
        <Border Margin="20">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Avatar  -->
            <Border
              Grid.Column="0"
              Width="32"
              Height="32"
              Margin="0,0,10,0"
              Background="#0080ff"
              CornerRadius="16">
              <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="R" />
            </Border>

            <!--  User Info  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
              <TextBlock
                FontSize="13"
                FontWeight="Medium"
                Text="shiblabi" />
              <TextBlock FontSize="11" Text="@shiblabi" />
            </StackPanel>

            <!--  Menu Icon  -->
            <Button
              Grid.Column="2"
              Width="28"
              Height="28"
              Padding="0"
              CornerRadius="20">
              <Button.Shadow>
                <ThemeShadow />
              </Button.Shadow>
              <ic:FluentIcon
                Icon="ChevronUp"
                IconSize="Size20"
                IconVariant="Filled" />
            </Button>
          </Grid>
        </Border>

      </StackPanel>
    </Border>

    <!--  Main Content Area - Poker Game  -->
    <Grid Grid.Column="1">
      <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">

          <!-- Header -->
          <Border
            Padding="20"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CircleElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Translation="0,0,32">
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                <ic:FluentIcon
                  Icon="PlayingCards"
                  IconSize="Size24"
                  IconVariant="Filled" />
                <TextBlock
                  VerticalAlignment="Center"
                  FontSize="18"
                  FontWeight="SemiBold"
                  Text="Texas Hold'em Poker" />
              </StackPanel>

              <StackPanel Grid.Column="1" Margin="20,0" VerticalAlignment="Center">
                <TextBlock FontSize="12" Text="Pot" />
                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#32CD32" Text="$150.00" />
              </StackPanel>

              <Button
                Grid.Column="2"
                Content="New Game"
                Style="{ThemeResource AccentButtonStyle}" />
            </Grid>
          </Border>

          <!-- Game Area -->
          <Border
            Padding="30"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CircleElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Translation="0,0,16">
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">

              <!-- Opponents -->
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Opponent 1 -->
                <Border Grid.Column="0" Padding="15" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                  <StackPanel HorizontalAlignment="Center" Spacing="10">
                    <TextBlock HorizontalAlignment="Center" FontWeight="Medium" Text="Alice" />
                    <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="#32CD32" Text="$950.00" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="5">
                      <Border Width="35" Height="50" Background="#1E3A8A" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="?" />
                      </Border>
                      <Border Width="35" Height="50" Background="#1E3A8A" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="?" />
                      </Border>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="Orange" Text="Small Blind" />
                  </StackPanel>
                </Border>

                <!-- Opponent 2 -->
                <Border Grid.Column="1" Padding="15" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                  <StackPanel HorizontalAlignment="Center" Spacing="10">
                    <TextBlock HorizontalAlignment="Center" FontWeight="Medium" Text="Bob" />
                    <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="#32CD32" Text="$1,050.00" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="5">
                      <Border Width="35" Height="50" Background="#1E3A8A" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="?" />
                      </Border>
                      <Border Width="35" Height="50" Background="#1E3A8A" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="?" />
                      </Border>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="Red" Text="Big Blind" />
                  </StackPanel>
                </Border>

                <!-- Opponent 3 -->
                <Border Grid.Column="2" Padding="15" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                  <StackPanel HorizontalAlignment="Center" Spacing="10">
                    <TextBlock HorizontalAlignment="Center" FontWeight="Medium" Text="Charlie" />
                    <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="#32CD32" Text="$1,000.00" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="5">
                      <Border Width="35" Height="50" Background="#808080" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="F" />
                      </Border>
                      <Border Width="35" Height="50" Background="#808080" CornerRadius="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White" Text="F" />
                      </Border>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="Gray" Text="Folded" />
                  </StackPanel>
                </Border>

              </Grid>

              <!-- Community Cards -->
              <StackPanel HorizontalAlignment="Center" Spacing="15">
                <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="Medium" Text="Community Cards (Flop)" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="8">
                  <!-- Card 1 -->
                  <Border Width="60" Height="80" Background="White" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="6">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                      <TextBlock FontSize="18" FontWeight="Bold" Text="A" />
                      <TextBlock FontSize="16" Foreground="Red" Text="♥" />
                    </StackPanel>
                  </Border>
                  <!-- Card 2 -->
                  <Border Width="60" Height="80" Background="White" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="6">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                      <TextBlock FontSize="18" FontWeight="Bold" Text="K" />
                      <TextBlock FontSize="16" Foreground="Black" Text="♠" />
                    </StackPanel>
                  </Border>
                  <!-- Card 3 -->
                  <Border Width="60" Height="80" Background="White" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="6">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                      <TextBlock FontSize="18" FontWeight="Bold" Text="Q" />
                      <TextBlock FontSize="16" Foreground="Red" Text="♦" />
                    </StackPanel>
                  </Border>
                  <!-- Turn - Hidden -->
                  <Border Width="60" Height="80" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="2" CornerRadius="6" Opacity="0.6">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Text="?" />
                  </Border>
                  <!-- River - Hidden -->
                  <Border Width="60" Height="80" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="2" CornerRadius="6" Opacity="0.6">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Text="?" />
                  </Border>
                </StackPanel>
              </StackPanel>

              <!-- Player Hand and Actions -->
              <Border Padding="20" Background="{ThemeResource AccentFillColorTertiaryBrush}" BorderBrush="{ThemeResource AccentControlElevationBorderBrush}" BorderThickness="2" CornerRadius="8">
                <StackPanel HorizontalAlignment="Center" Spacing="15">
                  <TextBlock HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Text="Your Hand - Chips: $1,000.00" />

                  <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
                    <!-- Player Card 1 -->
                    <Border Width="60" Height="80" Background="White" BorderBrush="#FFD700" BorderThickness="3" CornerRadius="6">
                      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="18" FontWeight="Bold" Text="J" />
                        <TextBlock FontSize="16" Foreground="Black" Text="♠" />
                      </StackPanel>
                    </Border>
                    <!-- Player Card 2 -->
                    <Border Width="60" Height="80" Background="White" BorderBrush="#FFD700" BorderThickness="3" CornerRadius="6">
                      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="18" FontWeight="Bold" Text="10" />
                        <TextBlock FontSize="16" Foreground="Red" Text="♥" />
                      </StackPanel>
                    </Border>
                  </StackPanel>

                  <TextBlock HorizontalAlignment="Center" FontSize="14" FontWeight="Medium" Foreground="#FFD700" Text="Straight Draw!" />

                  <!-- Action Buttons -->
                  <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
                    <Button
                      MinWidth="80"
                      Content="Fold"
                      Background="#FF4444"
                      Foreground="White" />
                    <Button
                      MinWidth="80"
                      Content="Check" />
                    <Button
                      MinWidth="80"
                      Content="Call $20"
                      Style="{ThemeResource AccentButtonStyle}" />
                    <Button
                      MinWidth="80"
                      Content="Raise"
                      Background="#32CD32"
                      Foreground="White" />
                  </StackPanel>
                </StackPanel>
              </Border>

            </StackPanel>
          </Border>

        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>

</Window>