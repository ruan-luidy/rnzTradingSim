<?xml version="1.0" encoding="utf-8" ?>
<Window
  x:Class="rnzGamblersTable.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:rnzGamblersTable"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="rnzGamblersTable"
  mc:Ignorable="d">
  <Window.SystemBackdrop>
    <MicaBackdrop />
  </Window.SystemBackdrop>


  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!--  Left Sidebar  -->
    <Border
      Grid.Column="0"
      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
      BorderBrush="{ThemeResource CircleElevationBorderBrush}"
      BorderThickness="0,0,1,0"
      CornerRadius="0"
      Translation="0,0,30">
      <Border.Shadow>
        <ThemeShadow />
      </Border.Shadow>
      <StackPanel>
        <Border Padding="20,20,20,25">
          <StackPanel Orientation="Horizontal">
            <Border
              Width="20"
              Height="20"
              Margin="0,0,8,0"
              Background="Red"
              CornerRadius="4" />
            <TextBlock
              FontSize="16"
              FontWeight="SemiBold"
              Text="rnzGamblersTable" />
          </StackPanel>
        </Border>

        <StackPanel Margin="0,0,0,30">

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToHomeCommand}"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel Orientation="Horizontal">
              <TextBlock VerticalAlignment="Center" Text="Home" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToGablingCommand}"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel>
              <TextBlock VerticalAlignment="Center" Text="Gambling" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,10"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToLeaderboardCommand}"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel>
              <TextBlock VerticalAlignment="Center" Text="Leaderboard" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>

          <Button
            Height="32"
            Margin="15,0,15,15"
            Padding="20,0"
            HorizontalAlignment="Stretch"
            Command="{Binding NavigateToPortfolioCommand}"
            CornerRadius="8"
            FontSize="14"
            Translation="0,0,30">
            <StackPanel>
              <TextBlock VerticalAlignment="Center" Text="Portfolio" />
            </StackPanel>
            <Button.Shadow>
              <ThemeShadow />
            </Button.Shadow>
          </Button>
        </StackPanel>

        <StackPanel Margin="15,0,15,0">
          <TextBlock
            Margin="0,0,0,10"
            FontSize="13"
            FontWeight="Medium"
            Text="Portfolio" />

          <Border
            Padding="15"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CircleElevationBorderBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource OverlayCornerRadius}"
            Translation="0,0,30">
            <StackPanel>
              <StackPanel
                Margin="0,0,0,12"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                  VerticalAlignment="Center"
                  FontSize="13"
                  Text="Total Value" />
              </StackPanel>

              <Border
                Margin="0,0,0,12"
                Padding="2"
                CornerRadius="8">
                <TextBlock
                  HorizontalAlignment="Center"
                  FontSize="16"
                  FontWeight="Medium" />
              </Border>

              <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  FontSize="12"
                  Text="Cash:" />
                <TextBlock
                  Grid.Column="1"
                  FontSize="12"
                  Text="Placeholder" />
              </Grid>
            </StackPanel>
            <Border.Shadow>
              <ThemeShadow />
            </Border.Shadow>
          </Border>
        </StackPanel>

        <!--  Bottom User Profile  -->
        <Border Margin="20">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Avatar  -->
            <Border
              Grid.Column="0"
              Width="32"
              Height="32"
              Margin="0,0,10,0"
              Background="#0080ff"
              CornerRadius="16">
              <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="R" />
            </Border>

            <!--  User Info  -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
              <TextBlock
                FontSize="13"
                FontWeight="Medium"
                Text="shiblabi" />
              <TextBlock FontFamily="11" Text="@shiblabi" />
            </StackPanel>

            <!--  Menu Icon  -->
            <Button
              Grid.Column="2"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Command="{Binding NavigateToProfileCommand}"
              CornerRadius="8">
              <FontIcon FontWeight="ExtraBold" Glyph="&#xE971;" />
            </Button>
          </Grid>
        </Border>

      </StackPanel>
    </Border>

    <!--  Main Content Area With ContentControl for Views  -->
    <Grid Grid.Column="1">
      <ContentControl />
    </Grid>
  </Grid>

</Window>
